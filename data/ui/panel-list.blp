using Gtk 4.0;

template $TunerPanelList : $TunerPanelContent {

    ScrolledWindow {
        hscrollbar-policy: never;
        vexpand: true;

        Stack stack {
            transition-type: crossfade;

            StackPage {
                name: "main";

                child: ListBox list_box {
                    styles [ "navigation-sidebar" ]

                    row-activated => $activated();
                };
            }
        }
    }
}

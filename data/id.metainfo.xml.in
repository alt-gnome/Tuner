<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>org.altlinux.Tuner</id>
  <icon type="stock">org.altlinux.Tuner</icon>
  <name>Tuner</name>
  <summary>Extensible control center</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <description>
    <p>
      Tuner is the home for your additional system settings, components,
      applications, and whatever else you want!
    </p>
    <ul>
      <li>Extended control over the interface and functions using plugins.</li>
      <li>The interface is adapted to different device sizes.</li>
      <li>Easy installation from the repository.</li>
      <li>
        You can create your own plugins without affecting the main program
        code.
      </li>
      <li>
        Easy creation of plugins working with dconf and unlimited plugin
        functionality thanks to libpeas.
      </li>
    </ul>
  </description>
  <translation type="gettext">tuner</translation>
  <custom>
    <value key="Purism::form_factor">mobile</value>
  </custom>
  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>
  <branding>
    <color type="primary" scheme_preference="light">#cbccd7</color>
    <color type="primary" scheme_preference="dark">#303040</color>
  </branding>
